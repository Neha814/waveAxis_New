<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="spinner_style_red">
        <item name="android:background">@drawable/gradient_spinner_red</item>
        <item name="android:popupBackground">@color/dark_yellow</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemRed.DropDownItem</item>
    </style>

    <style name="spinner_style_blue">
        <item name="android:background">@drawable/gradient_spinner_blue</item>
        <item name="android:popupBackground">@color/dark_yellow</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemBlue.DropDownItem</item>
    </style>

    <style name="spinner_style_new">
        <item name="android:background">@drawable/gradient_spinner_new</item>
        <item name="android:popupBackground">@color/red</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemNew.DropDownItem</item>
    </style>

    <style name="SpinnerItemNew.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/yellow</item>
    </style>
    <style name="SpinnerItemRed.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="SpinnerItemBlue.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>



    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowFullscreen">false</item>

    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
    </style>


</resources>
